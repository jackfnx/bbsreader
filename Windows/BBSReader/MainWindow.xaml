<Window x:Class="BBSReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BBSReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="DisableOnBeFavorite" TargetType="{x:Type MenuItem}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Favorite}" Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DisableOnNotBeFavorite" TargetType="{x:Type MenuItem}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Favorite}" Value="False">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <ContextMenu x:Key="KeywordOperationsContextMenu" Background="WhiteSmoke">
            <MenuItem Header="Add to Favorites" Name="AddFavoritesContextMenu" Click="AddFavoritesContextMenu_Click" Style="{StaticResource DisableOnBeFavorite}"/>
            <MenuItem Header="Remove From Favorites" Name="RemoveFavoritesContextMenu" Click="RemoveFavoritesContextMenu_Click" Style="{StaticResource DisableOnNotBeFavorite}"/>
            <MenuItem Header="Black List" Name="BlackContextMenu" Click="BlackContextMenu_Click"/>
        </ContextMenu>
        <Style x:Key="lv" TargetType="{x:Type ListViewItem}">
            <EventSetter Event="MouseDoubleClick" Handler="HandleDoubleClick" />
            <Setter Property="ContextMenu" Value="{StaticResource KeywordOperationsContextMenu}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Favorite}" Value="True">
                    <Setter Property="Background" Value="LightYellow" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="BackButton" Content="&lt; BACK" Width="75" Margin="1,1,10,1" HorizontalAlignment="Left" Click="BackButton_Click"/>
            <Button x:Name="DownloadButton" Content="Download" Width="75" Margin="1,1,10,1" HorizontalAlignment="Left" Click="DownloadButton_Click"/>
        </StackPanel>
        <ListView x:Name="listView" Grid.Row="1" ItemsSource="{Binding}" ItemContainerStyle="{StaticResource lv}" BorderThickness="0">
            <ListView.Resources>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" Width="500" DisplayMemberBinding="{Binding Path=Title}"/>
                    <GridViewColumn Header="Author" Width="100" DisplayMemberBinding="{Binding Path=Author}"/>
                    <GridViewColumn Header="Time" Width="100" DisplayMemberBinding="{Binding Path=Time}"/>
                    <GridViewColumn Header="Url" Width="200" DisplayMemberBinding="{Binding Path=Url}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
